@page
@using Domain
@model WebApp.Pages.GameOptions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GameOption</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameOption.BoardSize" class="control-label"></label>
                <input asp-for="GameOption.BoardSize" class="form-control" />
                <span asp-validation-for="GameOption.BoardSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.MaxShipSize" class="control-label"></label>
                <input asp-for="GameOption.MaxShipSize" class="form-control" />
                <span asp-validation-for="GameOption.MaxShipSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.ShipAmount" class="control-label"></label>
                <input asp-for="GameOption.ShipAmount" class="form-control" />
                <span asp-validation-for="GameOption.ShipAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.TouchState" class="control-label"></label>
                <select asp-for="GameOption.TouchState" asp-items="Html.GetEnumSelectList<TouchState>()" class="form-control"></select>
                <span asp-validation-for="GameOption.TouchState" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameOption.Combo" /> @Html.DisplayNameFor(model => model.GameOption.Combo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
